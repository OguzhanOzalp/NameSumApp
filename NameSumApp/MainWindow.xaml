<Window x:Class="NameSumApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Name Sum Calculator" Height="450" Width="500" Background="#f5f5f5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Enter a name to calculate its letter sum:" 
                   FontSize="16" 
                   Margin="0,0,0,10"/>

        <StackPanel Orientation="Vertical" Grid.Row="1">
            <TextBox Name="NameInput" 
                 FontSize="14" 
                 Padding="10" 
                 Background="White" 
                 BorderBrush="#ccc" 
                 BorderThickness="1"
                 Height="40"
                 KeyDown="NameInput_KeyDown"/>  

            <!-- "Calculate" Button -->
            <Button Content="Calculate" 
                    FontSize="14" 
                    Background="#4CAF50" 
                    Foreground="White" 
                    Padding="10" 
                    Margin="0,10,0,0"
                    Height="40"
                    Click="CalculateButton_Click"/>

            <TextBlock Name="ResultText" 
                       FontSize="16" 
                       Margin="0,20,0,0" 
                       TextWrapping="Wrap"/>

            <!-- "Run Tests" Button -->
            <Button Content="Run Tests" 
                    FontSize="14" 
                    Background="#2196F3" 
                    Foreground="White" 
                    Padding="10" 
                    Margin="0,10,0,0"
                    Height="40"
                    Click="RunTestsButton_Click"/>

            <TextBlock Name="TestResultsText" 
                       FontSize="14" 
                       Margin="0,20,0,0" 
                       TextWrapping="Wrap"
                       VerticalAlignment="Top"/>
        </StackPanel>
    </Grid>
</Window>